<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constaint_receive_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackGray"
    android:paddingEnd="12dp"
    android:paddingStart="6dp"
    android:paddingTop="8dp">


    <TextView
        android:id="@+id/text_receive_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_receive"
        android:gravity="center_vertical"
        android:minWidth="70dp"
        android:padding="8dp"
        android:text="Ð½"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_receive_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="12dp"
        android:text="11:40"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_receive_message_body" />

</android.support.constraint.ConstraintLayout>